{% capture full_section %}
  <section class="Section Section--spacingNormal" id="section-{{ section.id }}">
    <div class="Container">
      {%- if section.settings.subheading != blank or section.settings.title != blank -%}
        <header class="SectionHeader SectionHeader--center custom_review">
          {%- if section.settings.subheading != blank -%}
            <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
          {%- endif -%}
  
          {%- if section.settings.title != blank -%}
            <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
          {%- endif -%}
        </header>
      {%- endif -%}
  
      <div class="Rte" style="text-align: center">
        {{ section.settings.html }}
      </div>
    </div>
  </section>
{%- endcapture -%}

{%- if localization.country == 'Danmark' and section.settings.Denmark -%}
  {{ full_section }}
{% elsif localization.country == 'Sverige' and section.settings.Sverige %}
  {{ full_section }}
{% elsif localization.country == 'Italia' and section.settings.Italy %}
  {{ full_section }}
{% elsif localization.country == 'Deutschland' and section.settings.Germay %}
  {{ full_section }}
{% elsif localization.country == 'France' and section.settings.France %}
  {{ full_section }}
{% elsif localization.country == 'Espa√±a' and section.settings.spain %}
  {{ full_section }}
{% endif %}


