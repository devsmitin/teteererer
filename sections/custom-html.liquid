    },
     {
      "type": "checkbox",
      "id": "Italy",
      "label": "Italy",
      "default": false
    },
     {
      "type": "checkbox",
      "id": "Germay",
      "label": "Germay",
      "default": false
    },
     {
      "type": "checkbox",
      "id": "France",
      "label": "France",
      "default": false
    },
     {
      "type": "checkbox",
      "id": "spain",
