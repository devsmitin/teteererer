<section class="Section {{ template.suffix }}-{{ section.id }} {% unless section.settings.image %}Section--spacingNormal{% endunless %}">
  <div class="Container">
    <div class="Icon-flex">
    	{% for block in section.blocks %}
      	   <div class="icon-Flex-items">
             <div class="icon--flex">
               <div class="icon--flex-left">
               	  <span>{%- render 'icon', icon: 'right' -%}</span>
               </div>
               <div class="icon--flex-right">
                 <span class="button-text TelenorEvolution-Bold Heading u-h4">{%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}{{ block.settings.button_text | escape }}{%- if block.settings.link != blank -%}</a>{%- endif -%}</span>
                 <span class="TelenorEvolutionUI-Light">{{ block.settings.content }}</span>
               </div>
            </div>
      	   </div>
      	{% endfor %}
    </div>
  </div>
</section>
 {% if template contains 'telenorgreenroom' %} 
      <style>
        .{{ template.suffix }}-{{ section.id }} {
          background: {{ section.settings.bg }};
        }
      </style>
  {% endif %}
{% schema %}
  {
    "name": "Icon with text",
	"class" : "shopify-section--bordered Icon-section",
    "settings": [
        {
          "type": "color",
          "id": "bg",
          "label": "Select background color",
          "default": "#F5F5F5"
        }
    ],
    "blocks": [
      {
        "type": "Text-section",
        "name": "Text Section",
        "settings": [
			{
              "type": "text",
              "id": "button_text",
              "label": "Enter text",
              "default": "Apple iPhone"
            },
			{
              "type": "url",
              "id": "link",
              "label": "Link"
            },
			{
              "type": "richtext",
              "id": "content",
              "label": "Text",
              "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
            }
		]
      }
  	],
	"presets": [
      {
		"category": "Icon with text",
        "name": "USP Section",
        "settings": {},
		 "blocks": [
          {
            "type": "Text-section",
            "settings": {
              
            }
          }
        ]
      }
    ]
  }
{% endschema %}

